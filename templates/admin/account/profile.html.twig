{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% form_theme formPassword 'bootstrap_4_layout.html.twig' %}

{% block body %}

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">
          <div class="page-body"> 
              {% for label, messages in app.flashes %}
                <div class="alert alert-{{ label }} background-{{ label }}">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <i class="icofont icofont-close-line-circled text-white"></i>
                    </button>
                    {% for message in messages %}
                        <p style="margin-bottom: 0px !important;">{{ message | raw }}</p>
                    {% endfor %}
                </div>
              {% endfor %}
              <div class="row">
                <div class="col-sm-6 col-12">
                  <div class="card">
                    <div class="card-header">
                      <h5>Mon profil</h5>
                    </div>
                    <div class="card-block">
                      {{ form_start(form) }}
                      {{ form_row(form.firstName) }}
                      {{ form_row(form.email) }}
                        <div class="form-group row" style="float: right; margin-right: 20px;">
                            <button type="submit" class="btn btn-primary m-b-0">Enregistrer</button>
                        </div>
                      {{ form_end(form) }}
                    </div>
                  </div>
                </div>
                <div class="col-sm-6 col-12">
                  <div class="card">
                    <div class="card-header">
                      <h5>Modifier le mot de passe</h5>
                    </div>
                    <div class="card-block">
                      {{ form_start(formPassword) }}
                      {{ form_row(formPassword.newPassword) }}
                      {{ form_row(formPassword.confirmPassword) }}
                        <div class="form-group row" style="float: right; margin-right: 20px;">
                            <button type="submit" class="btn btn-primary m-b-0">Enregistrer</button>
                        </div>
                      {{ form_end(formPassword) }}
                    </div>
                  </div>
                </div>
              </div>
          </div>
      </div>
    </div>
    <div id="styleSelector">
    </div>
  </div>
</div>
</div>
</div>


{% endblock %}
