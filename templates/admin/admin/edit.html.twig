{% extends 'admin/base.html.twig' %}

{% block title %}Edition d'un administrateur{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">
        <div class="page-body">
          {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} background-{{ label }}">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <i class="icofont icofont-close-line-circled text-white"></i>
                </button>
                {% for message in messages %}
                    <p style="margin-bottom: 0px !important;">{{ message | raw }}</p>
                {% endfor %}
            </div>
          {% endfor %}
          <div class="card">
            <div class="card-header">
              <h5>Edition d'un administrateur</h5>
            </div>
            <div class="card-block">
              {{ form_start(form) }}
              <div class="row">
                <div class="col-md-6">
                  {{ form_row(form.firstName, { 'label': 'Prénom' }) }}
                </div>
                <div class="col-md-6">
                  {{ form_row(form.email, { 'label': 'Email' }) }}
                </div>
              </div>
              {{ form_row(form.role, { 'label': 'Rôle' }) }}
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="admin_admin_priceList">Grille tarifaire</label>
                    <select id="admin_admin_priceList" name="priceList" class="form-control">
                      <option value="">Choisir une grille tarifaire</option>
                      {% if prices %}
                        {% for price in prices %}
                          <option value="{{price.name}}" {% if price.name == admin.priceList %} selected {% endif %}>{{price.name}}</option>
                        {% endfor %}
                     {% endif %}
                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="admin_admin_stockList">Stock</label>
                    <select id="admin_admin_stockList" name="stockList" class="form-control">
                      <option value="">Choisir un stock</option>
                      {% if stocks %}
                        {% for stock in stocks %}
                          <option value="{{stock.name}}" {% if stock.name == admin.stockList %} selected {% endif %}>{{stock.name}}</option>
                        {% endfor %}
                     {% endif %}
                    </select>
                  </div>
                </div>
              </div>
              <div class="form-group row" style="float: right; margin-right: 20px;">
                <button type="submit" class="btn btn-primary m-b-0">Enregistrer</button>
              </div>
              {{ form_end(form) }}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="styleSelector">
    </div>
  </div>
</div>
</div>
</div>

{% endblock %}

