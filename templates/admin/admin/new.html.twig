{% extends 'admin/base.html.twig' %}

{% block title %}Ajouter un administrateur{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">
        <div class="page-body">
          {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} background-{{ label }}">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <i class="icofont icofont-close-line-circled text-white"></i>
                </button>
                {% for message in messages %}
                    <p style="margin-bottom: 0px !important;">{{ message | raw }}</p>
                {% endfor %}
            </div>
          {% endfor %}
          <div class="card">
            <div class="card-header">
              <h5>Ajouter un administrateur</h5>
            </div>
            <div class="card-block">
              {{ form_start(form) }}
              <div class="row">
                <div class="col-md-6">
                  {{ form_row(form.firstName, { 'label': 'Prénom' }) }}
                </div>
                <div class="col-md-6">
                  {{ form_row(form.lastName, { 'label': 'Nom' }) }}
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  {{ form_row(form.email, { 'label': 'Email' }) }}
                </div>
                <div class="col-md-6">
                  {{ form_row(form.phone, { 'label': 'Téléphone' }) }}
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  {{ form_row(form.hash, { 'label': 'Mot de passe' }) }}
                </div>
                <div class="col-md-6">
                  {{ form_row(form.passwordConfirm, { 'label': 'Confirmation du mot de passe' }) }}
                </div>
              </div>
              {{ form_row(form.role, { 'label': 'Rôle' }) }}
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="admin_admin_stockList">Stock</label>
                    <select id="admin_admin_stockList" name="stockList" class="form-control">
                      <option value="">Choisir un stock</option>
                      {% if stocks %}
                        {% for stock in stocks %}
                          <option value="{{stock.name}}">{{stock.name}}</option>
                        {% endfor %}
                     {% endif %}
                    </select>
                  </div>
                </div>
              </div>
              {# <div class="row">
                <div class="col-md-4">
                  {{ form_row(form.statistics, { 'label': 'Module Statistiques' }) }}
                </div>
                <div class="col-md-4">
                  {{ form_row(form.invoices, { 'label': 'Module Commandes' }) }}
                </div>
                <div class="col-md-4">
                  {{ form_row(form.histories, { 'label': 'Module Historique' }) }}
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  {{ form_row(form.folders, { 'label': 'Module Fichiers' }) }}
                </div>
                <div class="col-md-4">
                  {{ form_row(form.products, { 'label': 'Module Produits' }) }}
                </div>
                <div class="col-md-4">
                  {{ form_row(form.accounting, { 'label': 'Module Comptabilité' }) }}
                </div>
              </div> #}
              <div class="form-group row" style="float: right; margin-right: 20px;">
                <button type="submit" class="btn btn-primary m-b-0">Enregistrer</button>
              </div>
              {{ form_end(form) }}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="styleSelector">
    </div>
  </div>
</div>
</div>
</div>

{% endblock %}

