{% extends 'admin/base.html.twig' %}

{% block title %} Administration des messages {% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ app.request.getBaseURL() }}/css/chartist.css">
  <link rel="stylesheet" href="{{ app.request.getBaseURL() }}/css/widget.css">
{% endblock %}


{% block body %}

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">
        <div class="page-body">
          {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} background-{{ label }}">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <i class="icofont icofont-close-line-circled text-white"></i>
              </button>
              {% for message in messages %}
                <p style="margin-bottom: 0px !important;">{{ message | raw }}</p>
              {% endfor %}
            </div>
          {% endfor %}
          <div class="card">
            <div class="card-header">
              <h5>Liste des messages</h5>
              <a href="{{ path('admin_task_new') }}" class="btn btn-out-dashed waves-effect waves-light btn-primary btn-square text-right" style="float: right; padding: 5px 10px; margin: 0px 5px;">Envoyer un message</a>
            </div>
            <div class="card-block table-border-style">
              {% if tasks %}
                <div class="table-responsive">
                  <table class="table table-striped table-bordered datatable display">
                    <thead>
                      <tr>
                        <th>Message</th>
                        <th>Créateur</th>
                        <th>Date</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for task in tasks %}
                        <tr>
                          <td {% if task.complete %} style=" text-decoration: line-through;" {% endif %}>{{ task.name|capitalize }}</td>
                          <td {% if task.complete %} style=" text-decoration: line-through;" {% endif %}>{{ task.createdBy.firstName|capitalize }}</td>
                          <td {% if task.complete %} style=" text-decoration: line-through;" {% endif %}>{{task.createdAt|date_fr('EEE dd MMMM yyyy')|title }} à {{task.createdAt|date('H') }}h{{task.createdAt|date('i') }}</td>
                          <td>
                            {% if app.user.role == "ROLE_SUPER_ADMIN" and task.complete and task.completeBy %}
                              <i class="fas fa-flag" style="color: #7f8c8d; font-size: 20px; padding: 3px;" title="Effectuée par {{ task.completeBy.firstname|capitalize }} - {{task.updatedAt|date_fr('EEE dd MMMM yyyy')|title }} à {{task.updatedAt|date('H') }}h{{task.updatedAt|date('i') }}"></i>
                            {% endif %}
                            {% if not task.complete %}
                              <a href="{{ path('admin_task_complete', { id: task.id }) }}">
                                <i class="fas fa-check" style="color: #2ed8b6; font-size: 20px; padding: 3px;"></i>
                              </a>
                            {% endif %}
                            {% if app.user.firstname == task.createdBy.firstname and not task.complete %}
                              <a href="{{ path('admin_task_edit', { id: task.id }) }}">
                                <i class="fas fa-edit" style="color: #4099ff; font-size: 20px; padding: 3px;"></i>
                              </a>
                            {% endif %}
                            {% if app.user.role == "ROLE_SUPER_ADMIN" %}
                              <a href="{{ path('admin_task_delete', { id : task.id }) }}" class="js-delete-element">
                                <i class="fas fa-times" style="color: #ff5370; font-size: 20px; padding: 3px;"></i>
                              </a>
                            {% endif %}
                          </td>
                        </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
      <div id="styleSelector">
      </div>
    </div>
  </div>
</div>
</div>

<style>

.status {
  display: inline-flex;
  align-items: center;
  padding: .3rem .8rem;
  background-color: rgba(228, 229, 231, 1);
  border: 0;
  border-radius: 2rem;
  line-height: 1.6rem;
}

.result_icon {
  width: 32px;
  height: 32px;
  background-size: cover;
  background-position: center;
}

</style>

{% endblock %}


{% block javascripts %}
  
<script>
  

$('.js-delete-element').click( function () {

  event.preventDefault();
  var url = this.href;

  const swalWithBootstrapButtons = Swal.mixin({
    confirmButtonClass: 'btn btn-success',
    cancelButtonClass: 'btn btn-danger',
    buttonsStyling: false,
    reverseButtons: true
  })

  swalWithBootstrapButtons.fire({
    title: 'Êtes vous sur ?',
    html: 'Attention ! Vous aller supprimer une tâche.',
    type: 'warning',
    showCancelButton: true,
    confirmButtonText: 'Oui, supprimer',
    cancelButtonText: 'Non, c\'est une erreur',
  }).then((result) => {
    if (result.value) {
      location.href = url;
    }
  });
});



</script>
{% endblock %}

