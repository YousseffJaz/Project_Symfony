{% extends 'admin/base.html.twig' %}

{% block title %}Edition d'une commande{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

<div class="pcoded-content">
  <div class="pcoded-inner-content">
    <div class="main-body">
      <div class="page-wrapper">
        <div class="page-body" data-order="{{ order.id }}">
          {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} background-{{ label }}">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <i class="icofont icofont-close-line-circled text-white"></i>
              </button>
              {% for message in messages %}
                  <p style="margin-bottom: 0px !important;">{{ message | raw }}</p>
              {% endfor %}
            </div>
          {% endfor %}
          <div class="page-header-breadcrumb">
            <ul class=" breadcrumb breadcrumb-title" style="background: #f2f7fb; padding: 0px 5px;">
              <li class="breadcrumb-item">
                <a href="#" onclick="window.history.go(-1);" style="text-decoration: underline;">Commandes</a>
              </li>
              <li class="breadcrumb-item">
                N°{{order.id}}
              </li>
            </ul>
          </div>
          <div class="card" data-order="{{ order.id }}">
            <div class="card-header">
              <h5>Edition d'une commande</h5>
            </div>
            <div class="card-block">
              {{ form_start(form) }}

              <div class="row">
                <div class="col-md-4">
                  {{ form_row(form.firstname, { 'label': 'Prénom/Pseudo' }) }}
                </div>
                <div class="col-md-4">
                  {{ form_row(form.lastname, { 'label': 'Nom' }) }}
                </div>
                <div class="col-md-4">
                  {{ form_row(form.phone, { 'label': 'Téléphone' }) }}
                </div>
              </div>

              {{ form_row(form.address, { 'label': 'Adresse', 'attr': { 'rows' : '4'} }) }}

              {% if app.user.role != "ROLE_LIVREUR" %}
                <div class="row">
                  <div class="col-md-6"><br>
                    {{ form_row(form.note2, { 'label': 'Note' }) }}
                    <div class="form-group">
                      <label for="admin_order_stockList">Stock</label>
                      <select id="admin_order_stockList" name="stockList" class="form-control" required>
                        {# <option value="">Choisir un stock</option> #}
                        {% set length = [] %}
                        {% if products %}
                          {% for product in products %}
                            {% if product.stockLists.toArray %}
                              {% for stockLists in product.stockLists.toArray %}
                                {% if stockLists.name not in length %}
                                  {% set length = length|merge([stockLists.name]) %}
                                {% endif %}
                              {% endfor %}
                            {% endif %}
                          {% endfor %}
                        {% endif %}
                        {% for stockName in length %}
                          <option value="{{stockName}}" {% if order.lineItems.toArray %} {% for lineItem in order.lineItems.toArray %} {% if loop.last and lineItem.stock %} {% if stockName == lineItem.stock.name %} selected {% endif %} {% endif %} {% endfor %} {% endif %}>{{stockName}}</option>
                        {% endfor %}
                      </select>
                    </div>
                  </div>
                  <div class="col-md-6">
                    {% if app.user.role != "ROLE_SUPER_ADMIN" %}
                      <br>
                    {% endif %}
                    {{ form_row(form.createdAt, { 'label': 'Date de création' }) }}
                  </div>
                </div>
              {% endif %}

              <br><label>Produits</label>
              <div class="search_content" style="max-width: 500px; margin-bottom: 15px;">
                <div class="search_bar">
                  <div class="search_icon">
                    <svg fill="#8395B3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24px" height="24px">
                      <path d="M 9 2 C 5.1458514 2 2 5.1458514 2 9 C 2 12.854149 5.1458514 16 9 16 C 10.747998 16 12.345009 15.348024 13.574219 14.28125 L 14 14.707031 L 14 16 L 19.585938 21.585938 C 20.137937 22.137937 21.033938 22.137938 21.585938 21.585938 C 22.137938 21.033938 22.137938 20.137938 21.585938 19.585938 L 16 14 L 14.707031 14 L 14.28125 13.574219 C 15.348024 12.345009 16 10.747998 16 9 C 16 5.1458514 12.854149 2 9 2 z M 9 4 C 11.773268 4 14 6.2267316 14 9 C 14 11.773268 11.773268 14 9 14 C 6.2267316 14 4 11.773268 4 9 C 4 6.2267316 6.2267316 4 9 4 z" />
                    </svg>
                  </div>
                  <input id="search" type="text" placeholder="Rechercher un produit">
                </div>
                <ul class="search_results"></ul>
              </div>
              <div class="show_lines" style="margin-top: 10px; ">
                {% if order.lineItems.toArray %}
                  {% for lineItem in order.lineItems.toArray %}
                    <div class="flex justify-center items-center m-2 font-medium py-1 px-2 bg-white rounded bg-gray-100 border" style="max-width: fit-content;display: flex;"><div class="text-xs font-normal leading-none max-w-full flex-initial" style="padding: 7px 5px 7px 15px;">{{ lineItem.quantity }} x ({{ lineItem.title }}) - {{ lineItem.price|number_format(2, ',', ' ') }}€</div><div><i class="fal fa-times js-delete-lineitem" data-id="{{ lineItem.id }}" data-price="{{ lineItem.price }}" style=" color: #aaa; margin-top: 5px; margin-left: 7px; margin-right: 3px; cursor: pointer;"></i></div></div>
                  {% endfor %}
                {% endif %}
              </div><br>

              <div class="row">
                <div class="col-md-6">
                  {{ form_row(form.shippingCost, { 'label': "Frais d'expédition" }) }}
                  {{ form_row(form.total, { 'label': 'Montant total (€)' }) }}
                  {{ form_row(form.paymentType, { 'label': 'Type de vente' }) }}
                  {{ form_row(form.orderStatus, { 'label': 'Statut de la commande' }) }}
                  {{ form_row(form.trackingId, { 'label': 'Numéro de suivi (Colissimo)' }) }}
                </div>
                <div class="col-md-6">
                  {{ form_row(form.discount, { 'label': "Réduction" }) }}
                  {{ form_row(form.paid, { 'label': 'Montant payé (€)' }) }}
                  {{ form_row(form.paymentMethod, { 'label': 'Moyen de paiement' }) }}
                  <div id="delivery-admin-wrapper" style="display: none;">
                    {{ form_row(form.delivery, { 'label': 'Livraison' }) }}
                  </div>
                </div>
              </div>
              
              {{ form_row(form.note, { 'label': 'Commentaire', 'attr': { 'rows' : '5'} }) }}

              {% if app.user.role != "ROLE_LIVREUR" %}
                <section class="row p-6 md:p-8 md:flex md:flex-row md:rounded-xl">
                  <div class="col-md-6 w-full md:px-0 md:mr-8 md:w-1/2">
                  <label class="required" for="admin_order_orderStatus" style=" margin-top: 10px;">Ajouter des fichiers</label>
                    <send-upload-area class="flex flex-col items-center justify-center border-2 border-dashed border-grey-transparent rounded px-6 py-16 h-full w-full dark:border-grey-60" style="max-height: 200px;" data-order="{{ order.id }}">
                      <input id="file-upload" type="file" multiple="multiple" class="opacity-0 w-0 h-0 appearance-none absolute overflow-hidden" />
                      <label role="button" for="file-upload" class="btn rounded-lg flex items-center mt-4" style="background-color: rgba(0, 96, 223, 1); color :white; padding: 12px 30px;">Ajouter un fichier</label>
                    </send-upload-area>
                  </div>
                  <div class="col-md-6 mt-6 w-full md:w-1/2 md:-m-2">
                    <send-intro class="flex flex-col items-center justify-center bg-white px-6 md:py-0 py-6 mb-0 h-full w-full dark:bg-grey-90">
                      <div class="mt-2 flex flex-col h-full" style="width: 100%">
                        <br> 
                        <div id="show-files">
                          {% if order.uploads %}
                            {% for upload in order.uploads %}
                              <li class="bg-white mt-2 mb-4 shadow-light rounded dark:bg-grey-90 dark:border dark:border-grey-80" style="list-style: none;">
                                <div class="flex flex-row items-center p3 w-full" style="justify-content: space-between">
                                  <div>
                                    <h1 data-id="{{ upload.id }}" class="text-base font-medium word-break-all" style="margin-bottom: 5px;">{{ upload.name }}</h1>
                                    <a href="{{ app.request.getBaseUrl() }}/uploads/{{ upload.filename }}" target="_blank" data-filename="{{ upload.filename }}" style="font-size: 13px; cursor: pointer; text-decoration: underline; color: #007bff;" download="{{ upload.filename }}">Télécharger</a>
                                  </div>
                                  {% if "pdf" in upload.filename %}
                                    <object type="application/pdf" data="{{ app.request.getBaseUrl() }}/uploads/{{ upload.filename }}" height="200"></object>
                                  {% else %}
                                    <img src="{{ app.request.getBaseUrl() }}/uploads/{{ upload.filename }}" style="width: 300px; max-height: 200px;object-fit: cover;">
                                  {% endif %}
                                  </a>
                                  {% if app.user.role == "ROLE_SUPER_ADMIN" %}
                                    <a href="{{ app.request.getBaseUrl() }}/uploads/{{ upload.filename }}" class=" flex items-center js-delete-file" data-filename="{{ upload.filename }}" style=""><i class="fal fa-times" style="padding-right: 7px; color: red; font-size: 17px;"></i></a>
                                  {% endif %}
                                </div>
                              </li>
                            {% endfor %}
                          {% endif %}
                        </div>
                      </div>
                    </send-intro>
                  </div>
                </section>
              {% endif %}
              
              <div class="form-group row mt-2" style="float: right; margin-right: 20px;">
                <button type="submit" class="btn btn-primary m-b-0">Enregistrer</button>
              </div>
              {{ form_end(form) }}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="styleSelector">
    </div>
  </div>
</div>
</div>
</div>



{% if app.user.role != "ROLE_SUPER_ADMIN" %}
  <script>
    $('#admin_order_createdAt').parent().hide();
    $('#admin_order_note2').parent().hide();
  </script>
{% endif %}


{% if app.user.role == "ROLE_LIVREUR" %}
