<script>


$(function () {
  toggleDeliveryAdmin($('#admin_order_orderStatus').val());

  $('#admin_order_orderStatus').change(function() {
    toggleDeliveryAdmin($(this).val());
  });

  function toggleDeliveryAdmin(value) {
    if (value == '4') {
      $('#delivery-admin-wrapper').show();
    } else {
      $('#delivery-admin-wrapper').hide();
    }
  }


  $( document ).ready(function() {
    $('#admin_order_firstname').autocomplete({
      minLength: 0,
      source : function(request, response){ 
        $.ajax({
          url : '{{ path("admin_order_customer") }}',
          dataType : 'json', 
          data : {
            keyword : request.term, 
            maxRows : 5
          },
          success : function(donnee){
            response(donnee); 
          }
        });
      },
      select: function(event, ui) {
        $('#admin_order_firstname').val('');
      },
      create: function () {
      }
    });
  });

  $("body").on("focusout", "#admin_order_shippingCost", function (e) {
    var total = $('#admin_order_total').val();
    var price = $(this).val();

    if (total && price) {
      var total = parseFloat(total) + parseFloat(price);
      total = total.toFixed(2);
    } else if (total) {
      var total = total;
      $(this).val(0);
    } else if (price) {
      var total = price;
    } else {
      var total = "";
      $(this).val(0);
    }
    
    $('#admin_order_total').val(total);
  });

  $("body").on("focusin", "#admin_order_shippingCost", function (e) {
    var total = $('#admin_order_total').val();
    var price = $(this).val();

    if (total && price) {
      var total = parseFloat(total) - parseFloat(price);
      total = total.toFixed(2);
    } else if (total) {
      var total = total;
      $(this).val(0);
    } else if (price) {
      var total = price;
    } else {
      var total = "";
    }
    
    $('#admin_order_total').val(total);
    $(this).val();
  });


  $("body").on("focusout", "#admin_order_discount", function (e) {
    var total = $('#admin_order_total').val();
    var price = $(this).val();

    if (total && price) {
      var total = parseFloat(total) - parseFloat(price);
      total = total.toFixed(2);
    } else if (total) {
      var total = total;
      $(this).val(0);
    } else if (price) {
      var total = price;
    } else {
      var total = "";
      $(this).val(0);
    }
    
    $('#admin_order_total').val(total);
  });

  $("body").on("focusin", "#admin_order_discount", function (e) {
    var total = $('#admin_order_total').val();
    var price = $(this).val();

    if (total && price) {
      var total = parseFloat(total) + parseFloat(price);
      total = total.toFixed(2);
    } else if (total) {
      var total = total;
      $(this).val(0);
    } else if (price) {
      var total = price;
    } else {
      var total = "";
    }
    
    $('#admin_order_total').val(total);
    $(this).val();
  });



  $("#file-upload").change(function() {
    if (this.files && this.files[0]) {
      saveFile(this);
    }
  });
  function saveFile(input) {
    var url = '{{ path("admin_order_upload") }}';
    var order = $('div[data-order]').first().data('order');
    var length = input.files.length;
    $.each(input.files, function(index, value) {
      let formData = new FormData();           
      formData.append("file", value);
      formData.append("order", order);
      fetch(url, {method: "POST", body: formData})
      .then(function(response) {
        if (response.status == "200") {
          response.json().then(function(upload) {
            var preview = upload.filename.includes("pdf") 
              ? `<object type="application/pdf" data="{{ app.request.getBaseUrl() }}/uploads/${upload.filename}" height="200"></object>`
              : `<img src="{{ app.request.getBaseUrl() }}/uploads/${upload.filename}" style="width: 300px; max-height: 200px;object-fit: cover;">`;
            
            $('#show-files').append(`
              <li class="bg-white mt-2 mb-4 shadow-light rounded dark:bg-grey-90 dark:border dark:border-grey-80" style="list-style: none;">
                <div class="flex flex-row items-center p3 w-full" style="justify-content: space-between">
                  <div>
                    <h1 data-id="${upload.id}" class="text-base font-medium word-break-all" style="margin-bottom: 5px;">${upload.filename}</h1>
                    <a href="{{ app.request.getBaseUrl() }}/uploads/${upload.filename}" target="_blank" data-filename="${upload.filename}" style="font-size: 13px; cursor: pointer; text-decoration: underline; color: #007bff;" download="${upload.filename}">Télécharger</a>
                  </div>
                  ${preview}
                  <a href="{{ app.request.getBaseUrl() }}/uploads/${upload.filename}" class="flex items-center js-delete-file" data-filename="${upload.filename}">
                    <i class="fal fa-times" style="padding-right: 7px; color: red; font-size: 17px;"></i>
                  </a>
                </div>
              </li>
            `);
          });
        } else {
          response.json().then(function(error) { 
            alert(error.message);
          });
        }
      }).catch(function(error) {
        alert(error);
      });  
    });  
  }

  $('body').on('click', '.js-delete-file', function (e) {
    e.preventDefault();
    var url = '{{ path("admin_order_upload_delete") }}';
    var filename = $(this).data('filename');
    console.log($(this).parent().parent());
    $(this).parent().parent().remove();

    $.ajax({
     url : url,
     type : 'GET',
     data: { 
      filename: filename, 
    },
     success : function(result){
      console.log(result);
     },
     error : function(error){
        console.log(error)
     }
   });
  });


  $("body").on("click", ".js-delete-product", function (e) {
    var total = $('#admin_order_total').val();
    var price = $(this).data('price');

    if (total && price) {
      var total = parseFloat(total) - parseFloat($(this).data('price'));
      total = total.toFixed(2);
    } else if (total) {
      var total = total;
    } else if (price) {
      var total = price;
    } else {
      var total = "";
    }
    
    $('#admin_order_total').val(total);
    $(this).parent().parent().remove();
  });



  $("body").on("click", ".js-delete-lineitem", function (e) {
    var total = $('#admin_order_total').val();
    var price = $(this).data('price');
    var id = $(this).data('id');
    var $this = $(this);
    
    if (total && price) {
      var total = parseFloat(total) - parseFloat(price);
      total = total.toFixed(2);
    } else if (total) {
      var total = total;
    } else if (price) {
      var total = price;
    } else {
      var total = "";
    }

    var url = '{{ path("admin_lineitem_delete", {'id': 'id'}) }}';
    url = url.replace("id", id);
    
    $.ajax({
      url : url,
      success: function(result) {
        console.log(total);
        
        $('#admin_order_total').val(total);
        $this.parent().parent().remove();
      },
      error: function(error) {
        console.log(error);
      }
    });
  });



  $("body").on("click", "#lineItemButton", function (e) {
    $('.show_lines').append(`<div class="lineitem flex justify-center items-center m-2 font-medium py-1 px-2 bg-white rounded bg-gray-100 border" style="max-width: fit-content;display: flex;"><input type="hidden" name="variantId[]" value="`+ $("#lineItemButton").data('id') +`"><input type="hidden" name="stockListId[]" value="`+  $('#admin_order_stockList').val() + `"><input type="hidden" name="title[]" value="`+ $("#lineItemTitle").val() +`"><input type="hidden" name="price[]" value="`+ $("#lineItemPrice").val() +`"><input type="hidden" name="priceList[]" value="`+ $('#admin_order_priceList').val() +`"><input type="hidden" name="quantity[]" value="`+ $("#lineItemQuantity").val() +`"><div class="text-xs font-normal leading-none max-w-full flex-initial" style="padding: 7px 5px 7px 15px;">`+ $("#lineItemQuantity").val() +` x (` + $("#lineItemTitle").val() +`) - `+ $("#lineItemPrice").val() +`€ <i class="fal fa-times js-delete-product" data-price="`+ $("#lineItemPrice").val() +`" style=" color: #aaa; margin-left: 7px; margin-right: 3px; cursor: pointer;"></i></div>`);

    var total = $('#admin_order_total').val();
    var price = $("#lineItemPrice").val();

    if (total && price) {
      var total = parseFloat(total) + parseFloat(price);
      total = total.toFixed(2);
    } else if (total) {
      var total = total;
    } else if (price) {
      var total = price;
    } else {
      var total = "";
    }
    
    $('#admin_order_total').val(total);
    $(this).parent().remove();
  });


  $("body").on("click", ".add-product", function (e) {
    window.open("{{ path('admin_product_new') }}");
  });


  $("body").on("keyup", "#lineItemQuantity", function (e) {
    var quantity = $(this).val();
    var price = $("#lineItemButton").data('price');
    var total = parseFloat(quantity) * parseFloat(price);
    $('#lineItemPrice').val(total);
  });

  $("body").on("click", ".search_results > li", function (e) {
    if ($(".addLineItem").length) {
      $(".addLineItem").remove();
    }
    $('.search_content').after('<div class="addLineItem" style="display: flex; max-width: 900px;"><input type="text" id="lineItemTitle" name="lineItem[title]" required="required" class="form-control" autocomplete="off" value="'+ $(this).data('title') +'" style="margin: 0px 5px;"><input type="number" id="lineItemQuantity" name="lineItem[quantity]" required="required" class="form-control" autocomplete="off"  value="1" style="margin: 0px 5px; max-width: 150px;"><input type="text" id="lineItemPrice" name="lineItem[price]" required="required" class="form-control" autocomplete="off" value="'+ $(this).data('price') +'" style="margin: 0px 5px; max-width: 150px;"><div class="euro" style="font-size: 17px; margin-top: 8px; margin-right: 5px; color: #7f8c8d; font-weight: 400;">€</div><button id="lineItemButton" data-price="'+ $(this).data('price') +'" data-id="'+ $(this).data('id') +'" type="button" class="btn btn-success m-b-0" style="margin: 0px 5px;">Ajouter</button></div>');
    $("#search").val('');
    $(".search_bar").removeClass("available");
  });

  $("#search").on("input", function () {

    if ($(this).val().length) {
      $.ajax({
        url : '{{ path("admin_variant_autocomplete") }}',
        data : {
          'keyword' : $(this).val().toLowerCase(),
          'priceList' : $('#admin_order_priceList').val() ? $('#admin_order_priceList').val() : "Tarif Public",
          'stockList' : $('#admin_order_stockList').val() ? $('#admin_order_stockList').val() : "Lyon"
        },
        success: function(result) {
          console.log(result);
          $(".search_results").empty();
          if (result.length > 0) {
            $(".search_results").addClass("open");
            $(".search_bar").addClass("available");
            result.forEach(element => {
              console.log(element);
              if (element.quantity > 0) {
                $(".search_results").append(`<li class="result" data-title="` + element.title + `" data-price="` + element.price + `" data-id="` + element.id + `"><div class="result_text"><p class="name">` + element.title + ` - `+ element.price+`€ - (`+ element.quantity+` disponibles)</p></div></li>`);
              }
            });
            $(".search_results").append(`<li class="result add-product"><div class="result_text"><p class="name" style="color: #1a73e8;"><i class="fal fa-plus" style="padding-right: 5px;"></i> Ajouter un nouveau produit</p></div></li>`);
          } else {
            $(".search_results").empty();
            $(".search_results").removeClass("open");
            $(".search_bar").removeClass("available");
          }
        },
        error: function(error) {
          console.log(error);
          $(".search_results").empty();
          $(".search_results").removeClass("open");
          $(".search_bar").removeClass("available");
        }
      });
    } else {
      $(".search_results").empty();
      $(".search_results").removeClass("open");
      $(".search_bar").removeClass("available");
    }
  });

  $("body").click(function (e) {
      $(".search_results").removeClass("open");
      $(".search_bar").removeClass("available");
  });
});


</script>

{% endblock %}



