          {value: {{paid}}, name: 'Payé', url: "{{ path('admin_order_filter', {'type': 'status', 'value': '2'}) }}"},
          {value: {{refund}}, name: 'Trop-perçu', url: "{{ path('admin_order_filter', {'type': 'status', 'value': '3'}) }}"}
        ]
      }
    ]
  };

  // specify chart configuration item and data

  option6 = {
