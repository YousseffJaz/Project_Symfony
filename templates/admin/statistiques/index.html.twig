      avoidLabelOverlap: false,
      itemStyle: {
        borderRadius: 10,
        borderColor: '#fff',
        borderWidth: 2
      },
      label: {
        show: false,
        position: 'center'
      },
      emphasis: {
        label: {
          show: true,
          fontSize: '18',
        }
      },
      labelLine: {
        show: false
      },
      data: [
        {value: {{online}}, name: 'Internet', url: "{{ path('admin_order_filter', {'type': 'payment_type', 'value': '0'}) }}"},
        {value: {{local}}, name: 'Physique', url: "{{ path('admin_order_filter', {'type': 'payment_type', 'value': '1'}) }}"}
      ]
    }
    ]
  };

  // specify chart configuration item and data
  var option4 = {
    tooltip: {
        trigger: 'item'
    },
    legend: {
        top: '5%',
        left: 'center'
    },
    series: [
      {
        type: 'pie',
        radius: ['40%', '70%'],
        avoidLabelOverlap: false,
        itemStyle: {
            borderRadius: 10,
            borderColor: '#fff',
