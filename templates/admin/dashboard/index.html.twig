{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ app.request.getBaseURL() }}/css/chartist.css">
<link rel="stylesheet" href="{{ app.request.getBaseURL() }}/css/widget.css">
{% endblock %}

{% block body %}

  <div class="pcoded-content">
    <div class="pcoded-inner-content">
      <div class="main-body">
        <div class="page-wrapper">
          <div class="page-body">
            {% for label, messages in app.flashes %}
              <div class="alert alert-{{ label }} background-{{ label }}">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <i class="icofont icofont-close-line-circled text-white"></i>
                  </button>
                  {% for message in messages %}
                      <p style="margin-bottom: 0px !important;">{{ message | raw }}</p>
                  {% endfor %}
              </div>
            {% endfor %}
            <div class="row">
              <div class="col-xl-4 col-md-6">
                <a href="{{ path('admin_order_index') }}">
                  <div class="card prod-p-card" style="background: #fff">
                    <div class="card-body">
                      <div class="row align-items-center">
                        <div class="col">
                          <h6 class="m-b-5 text-white" style="font-weight: 700; color: #333 !important;">CA journalier</h6>
                          <h3 class="m-b-0 f-w-700 text-white" style="padding: 10px 0px; color: #2ed8b6 !important;">
                            {{ todayAmount[0].total|number_format(2, ',', ' ') }}€</h3>
                        </div>
                        <div class="col-auto">
                          <i class="fal fa-euro-sign text-c-red f-18" style=" color: #333"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
              <div class="col-xl-4 col-md-6">
                <a href="{{ path('admin_order_index') }}">
                  <div class="card prod-p-card" style="background: #fff">
                    <div class="card-body">
                      <div class="row align-items-center">
                        <div class="col">
                          <h6 class="m-b-5 text-white" style="font-weight: 700; color: #333 !important;">Nb commandes</h6>
                          <h3 class="m-b-0 f-w-700 text-white" style="padding: 10px 0px; color: #333 !important;">
                            {{ nbOrders|length }}</h3>
                        </div>
                        <div class="col-auto">
                          <i class="fal fa-file-invoice text-c-red f-18" style=" color: #333"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
              <div class="col-xl-4 col-md-6">
                <a href="{{ path('admin_order_waitting') }}">
                  <div class="card prod-p-card" style="background: #fff">
                    <div class="card-body">
                      <div class="row align-items-center">
                        <div class="col" style="padding-right: 0px;">
                          <h6 class="m-b-5 text-white" style="font-weight: 700; color: #333 !important;">Commandes en cours</h6>
                          <h3 class="m-b-0 f-w-700 text-white" style="padding: 10px 0px; color: #333 !important;">{{ orders }}</h3>
                        </div>
                        <div class="col-auto" style="padding-right: 0px;">
                          <i class="fal fa-hourglass-half text-c-green f-18" style=" color: #333"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
              <div class="col-xl-4 col-md-6">
                <a href="{{ path('admin_order_impayee') }}">
                  <div class="card prod-p-card" style="background: #fff">
                    <div class="card-body">
                      <div class="row align-items-center">
                        <div class="col">
                          <h6 class="m-b-5 text-white" style="font-weight: 700; color: #333 !important;">Trésorerie</h6>
                          <h3 class="m-b-0 f-w-700 text-white" style="padding: 10px 0px; color: #2ed8b6 !important;">
                            {{ notPaid|number_format(2, ',', ' ') }}€</h3>
                        </div>
                        <div class="col-auto">
                          <i class="fal fa-euro-sign text-c-red f-18" style=" color: #333"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
              <div class="col-xl-4 col-md-6">
                <a href="{{ path('admin_task_index') }}">
                  <div class="card prod-p-card" style="background: #fff">
                    <div class="card-body">
                      <div class="row align-items-center">
                        <div class="col">
                          <h6 class="m-b-5 text-white" style="font-weight: 700; color: #333 !important;">Messages</h6>
                          <h3 class="m-b-0 f-w-700 text-white" style="padding: 10px 0px; color: #333 !important;">{{ tasks}}</h3>
                        </div>
                        <div class="col-auto">
                          <i class="fal fa-envelope text-c-green f-18" style=" color: #333"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="styleSelector">
  </div>
</div>
</div>
</div>
</div>
{% endblock %}

{% block javascripts %}
{% include 'admin/partials/datatable.html.twig' %}

{% endblock %}
