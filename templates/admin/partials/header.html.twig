                                        <i class="fas fa-cube"></i>
                                    </span>
                                    <span class="pcoded-mtext">Catalogue</span>
                                </a>
                                <ul class="pcoded-submenu" style="{{ app.request.get('_route') == 'admin_variant_index' ? 'display: block;' }} {{ app.request.get('_route') == 'admin_product_index' ? 'display: block;' }} {{ app.request.get('_route') == 'admin_category_index' ? 'display: block;' }} {{ app.request.get('_route') == 'admin_stock_index' ? 'display: block;' }}">
