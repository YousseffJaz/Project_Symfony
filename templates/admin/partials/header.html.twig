                    <ul class="pcoded-item pcoded-left-item">
                        {% if app.user.role == "ROLE_SUPER_ADMIN" %}
                            <li class="{{ app.request.get('_route') == 'app_admin_dashboard' ? 'active' }}">
                                <a href="{{ path('app_admin_dashboard') }}">
                                    <span class="pcoded-micon">
                                        <i class="fas fa-chart-line"></i>
                                    </span>
                                    <span class="pcoded-mtext">Tableau de bord</span>
                                </a>
                            </li>
                            <hr style="border-top: 1px solid rgba(0,0,0,0.1);margin: 0px;">
