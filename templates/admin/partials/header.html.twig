                            <hr style="border-top: 1px solid rgba(0,0,0,0.1);margin: 0px;">
                            <li class="{{ app.request.get('_route') == 'admin_admin_index' ? 'active' }}">
                                <a href="{{ path('admin_admin_index') }}">
