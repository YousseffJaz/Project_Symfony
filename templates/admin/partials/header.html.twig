<div class="loader-bg">
    <div class="loader-bar"></div>
</div>
<div id="pcoded" class="pcoded">
    <div class="pcoded-overlay-box"></div>
    <nav class="navbar header-navbar pcoded-header">
        <div class="navbar-wrapper">
            <div class="navbar-logo">
                <a class="mobile-menu" id="mobile-collapse" href="#!">
                    <i class="fas fa-toggle-off"></i>
                </a>
                <a class="mobile-options waves-effect waves-light">
                    <i class="fas fa-bars"></i>
                </a>
            </div>
            <div class="navbar-container container-fluid">
                {% if app.user.role == "ROLE_SUPER_ADMIN" or app.user.role == "ROLE_EMPLOYÉ" %}
                    <ul class="nav-left">
                        <li class="header-search">
                            <div class="main-search morphsearch-search open">
                                <div class="input-group">
                                    <form action="{{ path('admin_search_global') }}" method="post" style="display: flex; gap: 10px;">
                                        <input type="text" class="form-control" name="search" placeholder="Rechercher" style="width: 200px; border: 1px solid #ccc; border-radius: 8px;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('search') }}">
                                        <button type="submit" class="btn btn-primary" style="border-radius: 8px; padding: 5px 10px;">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </li>
                    </ul>
                {% endif %}
                <ul class="nav-right">
                    <li class="user-profile header-notification">
                        <a href="{{ path('admin_profile') }}">
                            <span style="font-weight: bold; font-size: 16px;">{{ app.user.firstName|upper }}</span>
                            <i class="fas fa-chevron-down"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

