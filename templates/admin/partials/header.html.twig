                            <hr style="border-top: 1px solid rgba(0,0,0,0.1);margin: 0px;">
                            <li class="pcoded-hasmenu {{ app.request.get('_route') == 'admin_cashflow_index' ? 'pcoded-trigger' }} {{ app.request.get('_route') == 'admin_expense_index' ? 'pcoded-trigger' }}">
