                                <a href="{{ path('admin_statistique_index') }}">
                                    <span class="pcoded-micon">
                                        <i class="fas fa-chart-pie"></i>
                                    </span>
                                    <span class="pcoded-mtext">Statistiques</span>
                                </a>
                            </li>
